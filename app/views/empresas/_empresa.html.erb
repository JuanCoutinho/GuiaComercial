<div class="flex flex-wrap justify-center space-x-4">
  <div id="<%= dom_id empresa %>" class="bg-white rounded-lg shadow-md p-6 max-w-sm transition-transform transform hover:shadow-lg hover:scale-105 flex flex-col">
    
    <% if empresa.imagem.attached? %>
      <div class="mb-4">
        <%= image_tag empresa.imagem, class: "rounded-lg object-cover h-48 w-full" %>
      </div>
    <% end %>

    <div class="flex flex-col flex-grow">
      <p class="text-2xl font-bold mb-2">
        <%= empresa.nome %>
      </p>

      <div class="text-gray-700 mb-2">
        <p>
          <%= empresa.descricao %>
        </p>
      </div>

      <a class="bg-green-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-green-600 transition duration-200 flex items-center justify-center space-x-2" 
        target="_blank" 
        href="https://wa.me/<%= empresa.whatsapp %>">
        <i class="bi bi-whatsapp text-lg"></i>
        <span class="font-semibold">WhatsApp</span>
      </a>
    </div>
  </div>
</div>
